      <table class="table m-4">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">First</th>
            <th scope="col">Last</th>
            <th scope="col">Email</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
          <% for(let i=0; i < dataUser.length; i++) { %>
            <tr>
              <td><%= dataUser[i].id %></td>
              <td><%= dataUser[i].first_name %></td>
              <td><%= dataUser[i].last_name %></td>
              <td><%= dataUser[i].email %></td>
              <td>
                <button class="btn btn-outline-info"><a href="/user/detail/<%= dataUser[i].id %>">Detail</a></button>
                <button class="btn btn-outline-primary"><a href="/user/edit/<%= dataUser[i].id %>">Edit</a></button>
                  <div style="display: inline-flex;">
                    <form action="/user/delete/:id" method="POST">
                      <input type="text" value="<%= dataUser[i].id %>" name="id" hidden >
                      <button class="btn btn-outline-danger" type="submit">Delete</button>
                    </form>
                  </div>
                  <!-- <a href="/user/delete/<%= dataUser[i].id %>">Delete</a> -->
              </td>
            </tr>
         <% } %>
        </tbody>
      </table>

      <div style="width: 100%; display: flex; justify-content: center;">
        <form action="/create-user" method="POST">  
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">First Name</label>
            <input type="text"  name="first_name" class="form-control" id="exampleInputPassword1">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Last Name</label>
            <input type="text"  name="last_name" class="form-control" id="exampleInputPassword1">
          </div>
          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">Email</label>
            <input type="email"  name="email" class="form-control" id="exampleInputPassword1">
          </div>
          <button type="submit" class="btn btn-primary">Create</button>
        </form>
      </div>

      
